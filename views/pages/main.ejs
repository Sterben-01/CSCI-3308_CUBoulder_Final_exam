<%- include('../partials/header') %>
<%- include('../partials/menu') %>
        <br></br>
        <div class="container">
            <form>
                <div class="form-row">
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="user_input" placeholder="Enter search text">
                    </div>
                    <div class="col">
                        <button id="submit" class="btn btn-primary" type='button' onclick="makeApiCall();clearpage();">Search</button>
                    </div>
                </div>
            </form>
        </div>
        <br></br>
        <div class="container">
            <div class="row" id="universitycard"> <!-- place holder -->

            </div>
        </div>
        <!-- Modal -->
        <div class = "container">
            <div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Add review</h5>
                            <button type="button" class="close" data-dismiss="modal" onclick = "clearreview()"aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form action="/reviews" method = "post">
                                <div class="form-row">
                                    <div class="col">
                                        <label for="University Name" class="col-form-label">University Name:</label>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="universitynameinput" name = "uni_name" value="" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <label for="Review" class="col-form-label">Enter your review here:</label>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <textarea class="form-control" name = "uni_review"id="reviewinput" rows="3"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
